.question-set-title-wrap
  div
    h1
      = @question_set.title
.questions-container
  = form_tag("/question_sets/#{@question_set.id}/yourresult") do
    - @question_set.questions.each do |question|
      div[class="question-content clearfix feature_#{question.id}" id="#{question.id}"]
        .question-title-show
          .question-title-style
            = question.title
        .question-agree.question-choices.j__question_agree
          |  賛成
        .question-neutral.question-choices.j__question_neutral
          |  中立
        .question-opposition.question-choices.j__question_opposition
          |  反対
    = button_tag('結果を見る')
